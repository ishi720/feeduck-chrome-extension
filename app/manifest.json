{
  "name": "feeduck",
  "description": "表示ページ内のRSSのリンクを表示する拡張機能です。",
  "manifest_version": 3,
  "version": "1.1.0",
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "lib/jquery/jquery.min.js",
      "content/content.js"
    ]
  }],
  "action": {
    "default_title": "feeduck",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "icon/128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}